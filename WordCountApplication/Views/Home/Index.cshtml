@model IndexURLParameter

<div>
	<label style="white-space: nowrap; text-align: left; font-size: 60px; font-weight: 700; font-style: normal; text-decoration: none; font-family: &quot;Segoe UI&quot;; color: rgb(0, 0, 0);">WordCounter Application</label>
</div>
<br />
<br />
<form asp-action="Index" asp-controller="Home">

	<input asp-for="url" class="long-box"  placeholder="Type Url and press enter" />

</form>
<br />
<br />
@{
	if (Model != null)
	{


		var Imageitems = Model.ImageCarouselItems;

		if (Imageitems.Count() != 0)
		{
		<div>
			<span>Image Carousel</span>
			<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">

				<ol class="carousel-indicators">
					@for (int i = 0; i < Imageitems.Count(); i++)
					{
						<li data-target="#myCarousel" data-slide-to="@i" class="@(i==Imageitems.Count()-1?"active":"")"></li>
						
					}
				</ol>
				<div class="carousel-inner" role="listbox">
					@for (int i = 0; i < Imageitems.Count(); i++)
					{

						<div class="item @(i == 0 ? "active" : "")">
							@Html.Raw(@Imageitems[i])

						</div>
					}

					<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
						<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
						<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>

			</div>
		</div>
		}
		<hr />
		<span>Total Word Count:</span> @Model.WordCount
		<hr />
		<span> Top Ten Recurring Words</span>

		var recurringwords = Model.TopTenRecurringWords;

		if (recurringwords.Count() != 0)
		{
		<table class="table">
			<thead>
				<tr>
					<th>
						Word
					</th>
					<th>
						Count
					</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var item in recurringwords)
				{
					<tr>
						<td>
							@item.Key
						</td>
						<td>
							@item.Value
						</td>

					</tr>
				}
			</tbody>
		</table>
		}
	}
}